<% flash.each do |key, value| %>
    <% if value.class == Array %>
        <div class="<%= flash_class(key) %>">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <ul>
                <% value.each do |message| %>
                    <li><%= message %></li>    
                <% end %>
            </ul>
        </div>
    <% else %>
        <%= content_tag :div, class: "alert alert-#{key}" do %>
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= value %>
        <%end%>
        </div>
    <% end %>
<% end %>